include ./vars.sway.config
include ./bindsym.config.d/*

### Key bindings
#
# Basics:
#
    # Enable Hotspot
    bindsym Mod1+h exec nmcli d wifi hotspot ssid ArcoLinux && notify-send "hotspot turned on successfully"
    # Enable Hotspot
    bindsym Mod1+Shift+h exec nmcli con down && notify-send "Disabled Hotspot"

# System Controls
# 

    
    # Lock Scren
    bindsym Control+Mod1+l exec "swaylock --grace 0"

    # Open Clipboard history
    bindsym $mod+comma exec clipman pick -t rofi

    # Exit i3
    #bindsym $mod+Shift+e exec swaymsg mode "nagmode" && swaynag -t warning -m 'Power Menu' -B 'Reboot' 'reboot'  -B 'Shutdown' 'poweroff' -B 'Logout' 'swaymsg exit'
    #bindsym $mod+Shift+e exec swaynag -t warning -m 'Power Menu' -B 'Reboot' 'reboot'  -B 'Shutdown' 'poweroff' -B 'Logout' 'swaymsg exit'
    bindsym $mod+Shift+e exec nwg-bar


#

#
# Power Controls
#
    # Power saver mode
    bindsym Mod1+p exec sudo ryzenadj -a 3000 -b 3000 -c 3000 && notify-send "RyzenAdj Power Save" "Profile Limit Set to 3W"

    # Balanced mode 
    bindsym Mod1+b exec sudo ryzenadj -a 5500 -b 5500 -c 5500 && notify-send "RyzenAdj Balanced" "Profile Limit Set to 5.5W"
    # Fast
    bindsym Mod1+s exec sudo ryzenadj -a 7000 -b 8000 -c 8000 && notify-send "RyzenAdj Boost" "Profile Changed to 7W"
    # Defaults Mode
    bindsym Mod1+d exec sudo ryzenadj -a 35000 -b 35000 -c 35000 && notify-send "RyzenAdj Defaults" "Power Limit Set to 35W (MAX PERFORMANCE)"



#
# Moving around:
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # Or use $mod+[up|down|left|right]
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Move the focused window with the same, but add Shift
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    # Ditto, with arrow keys
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b splith
    bindsym $mod+v splitv
    bindsym $mod+Backspace split toggle

    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+t layout tabbed
    bindsym $mod+e layout toggle split
    bindsym $mod+Shift+p sticky toggle

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen
    bindsym $mod+n fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent

    # Move focus to child container
    bindsym $mod+c focus child
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show
